<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:gravity="center"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#000"
            android:textSize="70sp"
            android:textStyle="bold" />

        <LinearLayout
            android:background="@drawable/edittext_login_sh"
            android:layout_width="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:tint="#717171"
                android:layout_height="30dp"
                android:src="@drawable/ic_email"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:background="@null"
                android:layout_marginStart="5dp"
                android:inputType="textEmailAddress" />

        </LinearLayout>


        <LinearLayout
            android:background="@drawable/edittext_login_sh"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:tint="#717171"
                android:layout_height="30dp"
                android:src="@drawable/ic_restricted"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:background="@null"
                android:layout_marginStart="5dp"
                android:inputType="textPassword" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorApp"
            android:text="LOGIN" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="ลืมรหัสผ่าน"
            style="?android:listSeparatorTextViewStyle"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/button_facebook_shape"
            android:gravity="center"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#fff"
                android:src="@drawable/ic_facebook"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="เข้าสู่ระบบด้วย Facebook"
                android:textColor="#fff"
                android:layout_marginStart="15dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="สมัครด้วย Email"/>

    </LinearLayout>


</RelativeLayout>